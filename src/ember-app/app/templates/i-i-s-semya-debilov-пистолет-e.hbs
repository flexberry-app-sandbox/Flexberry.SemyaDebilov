<h3 class="ui header">{{t "forms.i-i-s-semya-debilov-пистолет-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-semya-debilov-пистолет-e.номер-caption")
      data-test-i-i-s-semya-debilov-пистолет-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field" data-test-i-i-s-semya-debilov-пистолет-e-состояние="true">
    <label>{{t "forms.i-i-s-semya-debilov-пистолет-e.состояние-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-semya-debilov-состояние")
      value=model.состояние
      class=(if (v-get validationModel "состояние" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "состояние" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-semya-debilov-пистолет-e.топливо-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.топливо
      displayAttributeName="типТоплива"
      autocomplete=true
      relationName="топливо"
      projection="ТопливоL"
      title=(t "forms.i-i-s-semya-debilov-пистолет-e.топливо-caption")
      readonly=readonly
      componentName="топливоLookup"
      class=(if (v-get validationModel "топливо" "isInvalid") "error")
      data-test-i-i-s-semya-debilov-пистолет-e-топливо=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "топливо" "message")}}
  </div>
</form>
